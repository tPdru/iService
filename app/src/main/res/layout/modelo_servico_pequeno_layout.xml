<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/cor_principal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgModeloCardServicoPp"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/foto_imagem" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"

            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/txtModeloCardServicoPpNome"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="15dp"
                android:text="ServiÃ§o tal"
                android:textColor="@color/cor_texto"
                android:fontFamily="@font/textos"
                android:textSize="@dimen/tamanho_pequeno" />

            <TextView
                android:id="@+id/txtModeloCardServicoPpValor"
                android:layout_width="match_parent"
                android:fontFamily="@font/textos"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/cor_texto"
                android:layout_height="wrap_content"
                android:text="R$ 500.00"
                android:textSize="@dimen/tamanho_pequeno" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>