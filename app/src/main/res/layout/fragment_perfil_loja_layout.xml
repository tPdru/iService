<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="7dp"
    android:layout_height="match_parent"
    tools:context=".FragmentPerfilLoja">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cor_fundo"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/imgPerfilLoja"
                    android:padding="5dp"
                    android:background="@color/cor_principal"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/foto_imagem" />

                <Button
                    android:id="@+id/btnEditarPerfilLoja"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/cor_principal"
                    android:fontFamily="@font/textos"
                    android:text="Editar Loja"
                    android:textColor="@color/cor_texto"

                    android:textSize="@dimen/tamanho_grande" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@color/cor_detalhes_secundarios"
                    android:fontFamily="@font/titulos"
                    android:gravity="center_horizontal"
                    android:text="Nome da loja"
                    android:textColor="@color/cor_texto"
                    android:textSize="@dimen/tamanho_grande" />

                <TextView
                    android:id="@+id/txtNomeLoja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/textos"
                    android:gravity="center_horizontal"
                    android:text="XXXXXXXXXXXXXXXXXXXXX"
                    android:textColor="@color/cor_texto"
                    android:textSize="@dimen/tamanho_medio" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@color/cor_fundo"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@color/cor_detalhes_secundarios"
                    android:fontFamily="@font/titulos"
                    android:gravity="center_horizontal"
                    android:text="Descrição"
                    android:textColor="@color/cor_texto"
                    android:textSize="@dimen/tamanho_grande" />

                <TextView
                    android:id="@+id/txtDescricaoLoja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/textos"
                    android:gravity="center_horizontal"
                    android:maxHeight="200sp"
                    android:minHeight="70sp"
                    android:text="----------"
                    android:textColor="@color/cor_texto"
                    android:textSize="@dimen/tamanho_medio" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@color/cor_fundo"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@color/cor_detalhes_secundarios"
                    android:fontFamily="@font/titulos"
                    android:gravity="center_horizontal"
                    android:text="Endereço loja física"
                    android:textColor="@color/cor_texto"
                    android:textSize="@dimen/tamanho_grande" />


                <TextView
                    android:id="@+id/txtEstadoLoja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/textos"
                    android:text="Estado: ------"
                    android:textColor="@color/cor_texto"
                    android:textSize="@dimen/tamanho_medio" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="3dp"
                    android:background="@color/cor_detalhes_secundarios" />

                <TextView
                    android:id="@+id/txtCidadeLoja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/textos"
                    android:text="Cidade: --------"
                    android:textColor="@color/cor_texto"
                    android:textSize="@dimen/tamanho_medio" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="3dp"
                    android:background="@color/cor_detalhes_secundarios" />

                <TextView
                    android:id="@+id/txtLogradouroLoja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/textos"
                    android:text="Bairro: -------------"
                    android:textColor="@color/cor_texto"
                    android:textSize="@dimen/tamanho_medio" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="3dp"
                    android:background="@color/cor_detalhes_secundarios" />

                <TextView
                    android:id="@+id/txtRuaLoja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/textos"
                    android:text="Rua: --------------"
                    android:textColor="@color/cor_texto"
                    android:textSize="@dimen/tamanho_medio" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="3dp"
                    android:background="@color/cor_detalhes_secundarios" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtNumeroLoja"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/textos"
                        android:gravity="center_horizontal"
                        android:text="Número: ------"
                        android:textColor="@color/cor_texto"
                        android:textSize="@dimen/tamanho_medio" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:background="@color/cor_detalhes_secundarios" />


                    <TextView
                        android:id="@+id/txtComplementoLoja"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/textos"
                        android:gravity="center_horizontal"
                        android:text="Complemento: -------"
                        android:textColor="@color/cor_texto"
                        android:textSize="@dimen/tamanho_medio" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@color/cor_fundo"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/cor_detalhes_secundarios"
                    android:fontFamily="@font/titulos"
                    android:gravity="center_horizontal"
                    android:text="Meus serviços"
                    android:textColor="@color/cor_texto"
                    android:textSize="@dimen/tamanho_grande" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/cardAdicionarServico"
                            android:layout_width="110dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/cor_principal"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/plus" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:orientation="vertical"
                                    android:padding="2dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/textos"
                                        android:gravity="center"
                                        android:text="Adicionar Serviço"
                                        android:textColor="@color/cor_texto"
                                        android:textSize="@dimen/tamanho_medio" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recPerfilLojaServicos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:contentDescription="Lista de serviços da sua loja" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>